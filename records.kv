#:include connected.kv
#:include login.kv
#:include options.kv


#: import main records
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size


<Records>:

    BoxLayout

        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        canvas:
            BorderImage:
                border: 10, 10, 10, 10
                source: 'interface-images/trafficlight11.png'
                pos: self.x + 0, self.y + 0
                size: 950,650


        BoxLayout:
            orientation: 'vertical'
            height:"100dp"

            Label:
                text: 'Records Of Streets'
                font_size: 36
                color: 0,0,0,1



        BoxLayout:
            orientation: "vertical"

            GridLayout:
                size_hint: 1, None
                size_hint_y: None
                height: 25
                cols: 9

                Label:
                    text: "ID"
                    color:0,0,0,1
                Label:
                    text: "Area ID"
                    color:0,0,0,1
                Label:
                    text: "Road ID"
                    color:0,0,0,1
                Label:
                    text: "No Of Vehicles"
                    color:0,0,0,1
                Label:
                    text: "Time"
                    color:0,0,0,1
                Label:
                    text: "Density"
                    color:0,0,0,1
                Label:
                    text: "Congestion"
                    color:0,0,0,1
                Label:
                    text: "Green Signal Duration"
                    color:0,0,0,1
                Label:
                    text: "Traffic Flow"
                    color:0,0,0,1



            BoxLayout:
                RecycleView:
                    viewclass: 'SelectableButton'
                    data: [{'text': str(x)} for x in root.data_items]
                    SelectableRecycleGridLayout:
                        cols: 9
                        default_size: None, dp(26)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        multiselect: True
                        touch_multiselect: True







        BoxLayout:
            padding: [55,20,55,20]
            spacing: 15

            BoxLayout:
                Button:
                    text: ''
                    font_size: 24
                    Image:
                        source:'interface-images/graph5.png'
                        pos: self.parent.x + 30, self.parent.y
                        size: 200,100



            BoxLayout:
                orientation: "vertical"
                Button:
                    text: 'Bar Graph'
                    font_size: 24
                    on_press: root.drawGraph()
                    Image:
                        source:'interface-images/graph2.png'
                        pos: self.parent.x + 15, self.parent.y
                        size: 60,40



                Button:
                    text: 'Pie Graph'
                    font_size: 24
                    on_press:  root.drawGraph1()
                    Image:
                        source:'interface-images/graph3.png'
                        pos: self.parent.x + 195, self.parent.y
                        size: 60,40

                Button:
                    text: 'Line Graph'
                    font_size: 24
                    on_press:  root.drawGraph2()
                    Image:
                        source:'interface-images/graph4.png'
                        pos: self.parent.x + 15, self.parent.y
                        size: 60,40



            BoxLayout:
                orientation: "vertical"


                Button:
                    text: 'Back'
                    font_size: 24

                    on_press: root.RecordsBack()

                Button:
                    text: 'Logout'
                    font_size: 24

                    on_press: root.RecordsLogout()

                Button:
                    text: 'Exit'
                    font_size: 24

                    on_press: app.stop()
