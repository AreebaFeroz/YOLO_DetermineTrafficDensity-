#:include login.kv
#:include options.kv
#:include records.kv
#:include connected.kv

<Live>:

    BoxLayout

        orientation: 'vertical'
        padding: [10,10,10,50]
        spacing: 50

                                            # FIRST SECTION
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Live Traffic Monitoring '
                font_size: 32
                color: 0,0,0,1



                                        # SECOND SECTION
        BoxLayout:

            padding: [0,60,0,0]
            orientation: 'horizontal'

            spacing: 10
            height: "100dp"
            BoxLayout:
                #Image:
                  #  source:'interface-images/room2.gif'
                   # pos:self.x ,self.y



                canvas:

                    BorderImage:
                        source:'interface-images/street1.png'
                        pos: self.x , self.y
                        size: 80,80


                    BorderImage:
                        source:'interface-images/room.gif'
                        pos: self.x+70 , self.y
                        size: 350,150


            BoxLayout:

                canvas:

                    BorderImage:
                        source:'interface-images/street2.png'
                        pos: self.x , self.y
                        size: 80,80
                    BorderImage:
                        source:'interface-images/room.gif'
                        pos: self.x+70 , self.y
                        size: 350,150



                                # THIRD SECTION
        BoxLayout:


            orientation: 'horizontal'
            spacing: 10
            height: "100dp"
            BoxLayout:

                canvas:
                    BorderImage:
                        source:'interface-images/street3.png'
                        pos: self.x , self.y
                        size: 80,80
                    BorderImage:
                        source:'interface-images/room.gif'
                        pos: self.x+70 , self.y
                        size: 350,150



            BoxLayout:

                canvas:

                    BorderImage:
                        source:'interface-images/street4.png'
                        pos: self.x , self.y
                        size: 80,80
                    BorderImage:
                        source:'interface-images/room.gif'
                        pos: self.x+70 , self.y
                        size: 350,150


                                # FOURTH SECTION
        BoxLayout:
            height:"100dp"
            padding: [300,20,300,20]
            spacing: 15
            Button:
                text: '     Monitor'
                font_size: 24
                on_press: root.goToConnected()
                Image:
                    source:'interface-images/monitor3.png'
                    pos: self.parent.x+2 , self.parent.y+3
                    size: 90,65



